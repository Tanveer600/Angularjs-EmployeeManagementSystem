                                                </div>
                                                <!-- end carousel -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end col -->

                                <div class="col-lg-6">
                                    <div class="p-lg-5 p-4">
                                        <div>
                                            <h5 class="text-primary">Welcome Back !</h5>
                                            <p class="text-muted">Sign in to continue to DDS-Analytics.</p>
                                        </div>

                                        <div class="mt-4">
                                            <form method="post" class="login-form">
                                                <div class="mb-3">
                                                    <label for="username" class="form-label">Username</label>
                                                    <input type="text" class="form-control" id="username" name="_loginName" placeholder="Enter username" oninput="checkFields()">
                                                </div>

                                                <div class="mb-3">

                                                    <label for="password-input" class="form-label">Password</label>
                                                    <div class="position-relative auth-pass-inputgroup mb-3">
                                                        <input type="password" class="form-control pe-5 password-input" name="_password" placeholder="Enter password" id="password-input" oninput="checkFields()">
                                                        <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon">
                                                            <i class="ri-eye-fill align-middle"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                <div class="mt-4">
                                                    <button id="login-btn" class="btn btn-primary w-100" type="submit" disabled>Sign In</button>
                                                </div>

                                                @if (!string.IsNullOrEmpty(ViewBag.Message as string))
                                                {
                                                    <div id="login-alert" class="alert alert-danger text-center mt-3 mb-0" role="alert">
                                                        @ViewBag.Message
                                                    </div>
                                                }
                                            </form>
                                        </div>


                                    </div>
